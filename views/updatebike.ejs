<%- include("header"); -%>
    <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">

<% if(er!=""){ %>
  <div class="alert alert-warning">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <i class="material-icons">close</i>
                    </button>
                    <span>
                      <%= er %> </span>
                  </div>
<%}%>

          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Update  Details</h4>
                </div>
                <div class="card-body">
                  <form action="/updatebike" method="post">
                    <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Bike Name</label>
                          <input type="text" name="bname" value="<%= bikeR.bname %>" class="form-control">
                        </div>
                      </div>
                       <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Model</label>
                          <input type="text" name="model" value="<%= bikeR.model %>" class="form-control">
                        </div>
                      </div>

                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Chasis No</label>
                          <input type="text" name="chasisno" value="<%= bikeR.chasisno %>" class="form-control" >
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Reg.No</label>
                          <input type="text" name="registerno" value="<%= bikeR.registerno %>" class="form-control">
                                        <input type="hidden" name="bdate" value="<%= bikeR.bdate %>" >
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Seller</label>
                          <input type="text" name="seller" value="<%= bikeR.seller %>" class="form-control">
                        </div>
                      </div>
                             <div class="col-md-1">
                        <div class="form-group">
                          <label class="bmd-label-floating">Ledger</label>
                         <input type="text" class="form-control" value="<%= bikeR.ledger %>" name="ledger">
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Purchase Amount</label>
                          <input type="text" id="first"  value="<%= bikeR.pamount %>" name="pamount" class="form-control">
                        </div>
                      </div>
                        <div class="col-sm-2">
                        <div class="form-group"><% var i="unchecked";%>
                        <% if(bikeR.rc === true){i="checked"} %>
                        <input class="mycheck" type="Checkbox" id="rc" name="rc" value="true" <%= i %>>
                          <label class="bmd-label-floating mylabel">RC</label><% var i="unchecked";%>
                            <% if(bikeR.noc === true){i="checked"} %>
                           <input class="mycheck" name="noc" type="Checkbox" id="noc" value="true"  <%= i %>>
                           <label class="bmd-label-floating mylabel">NOC</label>
                    
                        </div>
                      </div>
                            <div class="col-sm-2">
                        <div class="form-group"><% var j="unchecked";%>
                                                  <% if(bikeR.receive === true){j="checked"} %>
                           <input class="mycheck" type="Checkbox" id="receive" name="receive"  <%= j %> value="true">
                          <label class="bmd-label-floating mylabel">Recieved</label>
                        </div>
                      </div>
                     
                    </div>


                    <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Job Card</label>
                          <input type="text" id="second" value="<%= bikeR.jobcard %>" name="jobcard" class="form-control">
                        </div>
                      </div>


                       <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Transfer</label>
                          <input type="text" id="third" value="<%= bikeR.tranfer %>" name="transfer" class="form-control">
                        </div>
                      </div>
                     
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Total Cost:</label>
                          <input type="text" id="result" value="<%= bikeR.totalcost %>" name="totalcost"  class="form-control">
                           <input type="hidden"value="<%= bikeR.totalcost %>" name="oldcost">
                        </div>
                      </div>
                       <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">J.C Ref</label>
                          <input type="text" name="jcref" value="<%= bikeR.jcref %>" class="form-control">
                        </div>
                      </div>
                      </div>
                    <div class="row">
                     
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>Note</label>
                          <div class="form-group">
                            <label class="bmd-label-floating"></label>
                            <textarea class="form-control"  name="note" rows="1"><%= bikeR.note %></textarea>
                          </div>
                        </div>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right"  onclick="return confirm('Are You Sure!')" >Update</button>
                    <a href="/sale/<%=bikeR.registerno%>"><button type="button" class="btn pull-left">Sale</button></a>
                    <div class="clearfix"></div>
                  </form>


        </div>
<script>
document.getElementsByClassName('nav-item')[1].classList.add('active');


var first = document.getElementById('first');
var second = document.getElementById('second');
var third = document.getElementById('third');
var result = document.getElementById('result');

first.addEventListener("input", sum);
second.addEventListener("input", sum);
third.addEventListener("input", sum);


function sum() {

var one = parseFloat(first.value) || 0;
var two = parseFloat(second.value) || 0;
var three = parseFloat(third.value) || 0;  
var add = one+two+three;

result.value = add;
}

</script>
      <%- include("footer"); -%>

